#!/bin/bash
#
# Xiange Linux build scripts

# Short one-line description of this package.
DESCRIPTION="Mozilla's JavaScript engine"

# Homepage, not used by Portage directly but handy for developer reference
HOMEPAGE="http://foo.bar.com/"

# Point to any required sources; these will be automatically downloaded by
# gpkg. 
# $N = package name, such as autoconf, x-org
# $V = package version, such as 2.6.10

SRC_URI="https://archive.mozilla.org/pub/firefox/releases/68.11.0esr/source/firefox-68.11.0esr.source.tar.xz"


# Binary package URI.
BIN_URI=""


# Runtime Depend
RDEPEND="readline libffi nspr"

# Build time depend
DEPEND="${RDEPEND}"



#init 
xgb_init()
{
	echo "init $N-$V$R build script..."
}

#unpack
xgb_unpack()
{
	#unpard file from $XGPATH_SOURCE to current directory.
	echo "Unpacking to `pwd`"
	tar xf $XGPATH_SOURCE/$(basename $SRC_URI)
}

#config
xgb_config()
{
	echo "config $N-$V$R..."

	#fist, cd build directory
	cd firefox-68.11.0
	err_check "enter directory failed."

	mountpoint -q /dev/shm || mount -t tmpfs devshm /dev/shm
	err_check "mount shm failed"

	sed '21,+4d' -i js/moz.configure
	err_check "patch 1 failed"


	#fixed moz_arena_malloc issue
	patch -p1 < $XGPATH_SOURCE/utility.diff 
	err_check "patch 2 failed"

	#second, add package specified config params to XGB_CONFIG
	mkdir obj
	cd obj
	err_check "cd obj failed"

	XGB_CONFIG += " --with-intl-api          \
                    --with-system-zlib       \
                    --with-system-icu        \
                    --disable-jemalloc       \
                    --disable-debug-symbols  \
                    --enable-readline        \
                    --enable-unaligned-private-values "

	export SHELL=/bin/bash

	#Third, call configure with $XGB_CONFIG
	CC=gcc CXX=g++ LLVM_OBJDUMP=/bin/false ../js/src/configure $XGB_CONFIG
}

#build
xgb_build()
{
	echo "make $N-$V$R..."

	#run make in current directory
	make $XGPARA_MAKE
}

#check
xgb_check()
{
	echo "checking $N-$V$R.."
	make check
}

#install
xgb_install()
{
	echo "install to $XGPATH_DEST"

	#install everything to $XGPATH_DEST
	make DESTDIR=$XGPATH_DEST install
	err_check "install failed"

	rm -v $XGPATH_DEST/usr/lib/libjs_static.ajs

}

