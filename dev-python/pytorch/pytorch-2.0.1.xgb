#!/bin/bash
#
# Xiange Linux build scripts

# Short one-line description of this package.
DESCRIPTION="Tensors and Dynamic neural networks in Python with strong GPU acceleration"

# Homepage, not used by Portage directly but handy for developer reference
HOMEPAGE="https://github.com/pytorch/pytorch#from-source"

# Point to any required sources; these will be automatically downloaded by
# gpkg. 
# $N = package name, such as autoconf, x-org
# $V = package version, such as 2.6.10

#git clone -b main --recurse-submodule https://github.com/pytorch/pytorch.git
SRC_URI="pytorch-git.tar.xz"


# Binary package URI.
BIN_URI=""


# Runtime Depend
RDEPEND="PyYAML typing_extensions"

# Build time depend
DEPEND="${RDEPEND}"



#init 
xgb_init()
{
	echo "init $N-$V$R build script..."
}

#unpack
xgb_unpack()
{
	#unpard file from $XGPATH_SOURCE to current directory.
	echo "Unpacking to `pwd`"
	tar xf $XGPATH_SOURCE/$(basename $SRC_URI)
}

#config
xgb_config()
{
	echo "config $N-$V$R..."

	#fist, cd build directory
	mkdir build && cd build
	err_check "cd build failed"

	#second, add package specified config params to XGB_CONFIG
	XGB_CONFIG="-DCMAKE_INSTALL_PREFIX=/usr  \
			-DATEN_NO_TEST=ON -DUSE_MKLDNN=ON  \
			-DUSE_VULKAN_FP16_INFERENCE=ON -DUSE_VULKAN_RELAXED_PRECISION=ON \
			-DBUILD_SHARED_LIBS:BOOL=ON -DCMAKE_BUILD_TYPE:STRING=Release \
		 	-DUSE_CUDA=OFF -DUSE_VULKAN=ON -DUSE_NATIVE_ARCH=ON -G Ninja "


	#Third, call configure with $XGB_CONFIG
	cmake $XGB_CONFIG ../pytorch
}

#build
xgb_build()
{
	echo "make $N-$V$R..."

	#run make in current directory
	ninja
}

#check
xgb_check()
{
	echo "checking $N-$V$R.."
	#make check
}

#install
xgb_install()
{
	echo "install to $XGPATH_DEST"

	#install everything to $XGPATH_DEST
	DESTDIR=$XGPATH_DEST ninja install
	err_check "install failed"

	#move tmp to opt
	mv $XGPATH_DEST/tmp $XGPATH_DEST/opt
}

#post install
xgb_postinst()
{
	echo "running after package installed..."
}

#pre remove
xgb_prerm()
{
	echo "running before package delete..."
}

#post remove
xgb_postrm()
{
	echo "running after package delete..."
}
