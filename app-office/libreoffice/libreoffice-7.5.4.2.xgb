#init 
xgb_init()
{
	echo "init $N-$V$R build script..."
}

#unpack
xgb_unpack()
{
	#unpard file from $XGPATH_SOURCE to current directory.
	echo "Unpacking to `pwd`"
	tar xf $XGPATH_SOURCE/$N-$V$R.tar.xz --no-overwrite-dir
}

#config
xgb_config()
{
	echo "config $N-$V$R..."

	#fist, cd build directory
	cd $N-$V$R
	err_check "enter directory failed."

	install -dm755 external/tarballs 
	err_check "enter directory 1 failed."
	for i in $XGPATH_SOURCE/*
	do
	ln -sv $i external/tarballs/
	done

	cp $XGPATH_SOURCE/tarballs/* external/tarballs

	export LO_PREFIX=/usr

	sed -e "/gzip -f/d"   \
		-e "s|.1.gz|.1|g" \
		-i bin/distro-install-desktop-integration 
	err_check "enter directory 5 failed."

	sed -e "/distro-install-file-lists/d" -i Makefile.in 
	err_check "enter directory 6 failed."

	export ac_cv_lib_gpgmepp_progress_callback=yes

	#sed -e 's@getURI()->c_str()@getURI().c_str()@' \
    #-i sdext/source/pdfimport/xpdfwrapper/pdfioutdev_gpl.cxx





	#second, add package specified config params to XGB_CONFIG
	XGB_CONFIG+="  --sysconfdir=/etc           \
             --with-help                 \
             --without-krb5             \
             --without-junit             \
             --without-gssapi           \
             --with-myspell-dicts        \
             --without-java \
             --without-system-dicts      \
             --disable-dconf             \
             --disable-odk               \
             --disable-firebird-sdbc     \
             --enable-release-build=yes  \
             --enable-python=system      \
             --with-system-boost=yes     \
             --with-system-cairo         \
             --with-system-clucene       \
             --with-system-curl          \
             --with-system-expat         \
			 --with-system-epoxy         \
			 --with-system-glm           \
			 --with-system-gpgmepp       \
             --with-system-graphite      \
             --with-system-harfbuzz      \
             --with-system-icu           \
             --with-system-jpeg          \
             --with-system-lcms2         \
             --with-system-libatomic_ops \
             --with-system-libpng        \
             --with-system-libxml        \
             --with-system-nss           \
             --with-system-odbc          \
             --with-system-openldap      \
             --with-system-openssl       \
             --with-system-poppler       \
             --enable-gtk3              \
             --with-system-redland       \
             --with-system-hunspell     \
			  --with-system-libtiff      \
			  --with-system-libwebp      \
             --disable-postgresql-sdbc   \
             --with-parallelism=$(nproc) \
             --with-system-zlib "

	
	#Third, call configure with $XGB_CONFIG
	./autogen.sh $XGB_CONFIG --with-vendor="Xiange Linux" \
	 	--with-lang="en-US zh-CN"
	err_check "autogen failed"

	#create symbol links
	ln -sv src/libreoffice-translations-$V/translations/ .
	err_check "link1 failed"

	ln -sv src/libreoffice-help-$V/helpcontent2/ .
	err_check "link2 failed"

	ln -sv src/libreoffice-dictionaries-$V/dictionaries/ .
	err_check "link3 failed"

}

